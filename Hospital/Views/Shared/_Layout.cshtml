@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital</title>
    <link rel="stylesheet" href="~/css/Layout/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout/prism-okaidia.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout/bootstrap-icons.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout/custom.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospital.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="nav-container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hospital</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex nav-account">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="sidebar-container" id="sidebar">
                <div class="sidebar-button">
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
                <div class="sidebar-content">
                    <nav>
                        <ul class="nav-list" id="sidenav-list">
                            <li class="mainlist-item" id="OPD">
                                <a onclick="status(this)">OPD</a>
                            </li>
                            <li class="mainlist-item" id="Pharmacy">
                                <a onclick="status(this)">Pharmacy</a>
                            </li>
                            <li class="mainlist-item" id="Lab">
                                <a onclick="status(this)">Lab</a>
                            </li>
                            <li class="mainlist-item" id="Patient">
                                <a onclick="status(this)">Patients</a>
                            </li>
                            <li class="mainlist-item" id="Admin">
                                <a asp-controller="Admin" asp-action="Index" aria-current="page">Admin</a>
                                <ul class="sublist">
                                    <li class="sublist-item" id="User">
                                        <a asp-controller="User" asp-action="Index" aria-current="page">Users</a>
                                    </li>
                                </ul>
                            </li>                           
                        </ul>
                    </nav>
                </div>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Hospital - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/prism.js" asp-append-version="true"></script>
    <script src="~/js/custom.js" asp-append-version="true"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script>
        function submitLogoutForm() {
            // Manually trigger the form submission
            document.getElementById('logout-form').submit();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
